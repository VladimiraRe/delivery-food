include ./_config.pug

section.restaurants
    // Секция с промо
    include ./promo/_promo.pug
    .container
        .restaurants__title-wrap
            h2.restaurants__title Рестораны
            input(type="text", placeholder="Поиск блюд и ресторанов").restaurants__search
        .restaurants__cards
            each i in allRestaurants
                a(href="./restaurant.html").restaurants__card
                    img(src=i.image, alt="Food photo").restaurants__img
                    .restaurants__text
                        .restaurants__heading
                            h3.restaurants__name #{i.name}
                            span.restaurants__time #{i.time}
                        .restaurants__info
                            span.restaurants__rating #{i.rating}
                            .restaurants__tag
                                span.restaurants__price #{i.price}
                                span.restaurants__category #{i.category}




